[user]
      # These values are set in ~/.gitconfig_local

[include]
      path = ~/.gitconfig_local

[core]
    pager = delta --dark --paging=never

[delta]
  features = side-by-side
  line-numbers = true
  syntax-theme = Monokai Extended

[interactive]
    diffFilter = delta --color-only

[delta "diff"]
    syntax-highlighting = true

[delta "side-by-side"]
    ; width = 80

[merge]
    conflictstyle = diff3
    git = delta
    tool = delta
