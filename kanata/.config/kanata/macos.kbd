;; TODO: 
;; add end and home keys
;; add delete and backspace keys
(deflayer navigation
  esc
  grv  1    2    3    4    5    6    7    8    9    0    -    =    bspc
  tab  esc  w    e    r    t    y    u    i    o    p    [    ]    \
  caps a    s    d    f    g    left down up right  ;    '    ret
  lsft z    x    c    v    b    @tabLeft @tabRight ,    rpt-any    /    rsft     up
  lctl lmet lalt           spc            ralt rmet rctl    left down right
)

;; defalias for mouseless layer
;; add any key combination that are commonly used when in mouseless free mode
;; NOTE: this (macro M-w) will work if mouseless uses 'w' key in free mode. 
;; strangely, when using 'w' as back key of mouse, cmd+w will behave like 'w' key instead.
(defalias
  copy (macro M-c)
  closeTab (macro M-w) 
)

;; this layer is used for mouseless free mode.
;; to not conflict with base's home row delays
;; WARN: cannot modify `x` here as mouseless will behave strangely.
;; in jump mode, pressing `x` will not make it behave like `x` but it will will run the alias instead.
;; modifying `c` is fine.
(deflayer mouseless
  esc
  grv  1  @closeTab   3    4    5    6    7    8  @tabLeft    @tabRight   -    =    bspc
  tab  q    w    e    r    t    y    u    i    o    p    [    ]    \
  @escKey a    s    d    f    g    h    j    k    l    ;    '    ret
  lsft z    x    @copy    v    b    n    m    ,    .    /    rsft     up
  lctl lmet lalt  spc   ralt @mCMD2 rctl    left down right
)

