;; - lmet j of mouseless => lalt j. oppisite position vs macos
(defcfg
  log-layer-changes no
  process-unmapped-keys yes
  ;; danger-enable-cmd yes
  concurrent-tap-hold yes
)

(defchordsv2
  ;; (participating-keys1) action1 timeout1 release-behaviour1 (disabled-layers1)
  ;; (caps j) (multi (macro A-0) (layer-switch mouseless)) 50 all-released (mouseless)
  ;; (lmet j) (multi (macro A-0) (layer-switch mouseless)) 50 all-released (mouseless)

  (lmet caps) (layer-switch base) 50 all-released (base)

