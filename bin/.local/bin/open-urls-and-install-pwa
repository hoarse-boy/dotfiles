#!/bin/bash

# Colors
YELLOW='\033[1;33m'
NC='\033[0m' # No Color

# URLs to open (add more as needed)
urls=(
  "https://chat.deepseek.com/"
  "https://chatgpt.com/"
  "https://www.youtube.com/"
  "https://mail.google.com/mail/"
)

# Check if Chrome is installed
if ! command -v google-chrome-stable &>/dev/null; then
  echo "❌ Error: 'google-chrome-stable' not found. Install it with:"
  echo "   yay -S google-chrome"

  exit 1
fi

# Open each URL in Chrome (normal tabs)
for url in "${urls[@]}"; do
  google-chrome-stable "$url" &
  sleep 0.5 # Delay to prevent issues
done

echo
echo "✅ URLs opened in Chrome."
echo
echo -e "Click ${YELLOW}⋮ (Menu) → Cast, save, share → Install page as app...${NC} to install as PWA."
