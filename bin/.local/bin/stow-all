#!/bin/bash

set -uo pipefail

# -------------------------------
# Color codes
# -------------------------------
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
BLUE='\033[0;34m'
NC='\033[0m'

# -------------------------------
# Logging separator
# -------------------------------
log_separator() {
  echo -e "\n${BLUE}â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•${NC}\n"
}

# -------------------------------
# Silent cleanup for Neovim config
# -------------------------------
cleanup_nvim() {
  NVIM_PATH="$HOME/.config/nvim"

  if [[ -d "$NVIM_PATH" ]]; then
    echo -e "${YELLOW}âš ï¸  Removing existing Neovim config at ${NVIM_PATH}${NC}"
    rm -rf "$NVIM_PATH"
    echo -e "${GREEN}âœ“ Removed old Neovim config.${NC}"
  fi
}

# -------------------------------
# Stow packages
# -------------------------------
run_stow() {
  cd ~/my-dotfiles || {
    echo -e "${RED}âœ˜ Failed to cd into ~/my-dotfiles${NC}"
    return 1
  }

  EXCLUDE=("hypr" "arch-installation-script" ".git" "logs")

  log_separator
  echo -e "${GREEN}ğŸ“¦ Stowing dotfiles...${NC}"
  log_separator

  for package in */; do
    package_name="${package%/}" # remove trailing slash

    if printf '%s\n' "${EXCLUDE[@]}" | grep -Fxq "$package_name"; then
      echo -e "${YELLOW}â†’ Skipping excluded package: ${package_name}${NC}"
      continue
    fi

    echo -e "${BLUE}â†’ Stowing: ${package_name}${NC}"
    stow -v "$package_name"
  done

  echo -e "${GREEN}âœ… All applicable packages stowed.${NC}"
}

# -------------------------------
# Main
# -------------------------------
cleanup_nvim
run_stow
