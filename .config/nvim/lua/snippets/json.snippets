snippet deno-json-debug "create launch.json for deno"
  {
    "version": "0.2.0",
    "configurations": [
      {
				"name": "${1}",
        "type": "node",
        "request": "launch",
        "cwd": "${workspaceFolder}",
        "runtimeExecutable": "deno",
        "runtimeArgs": ["run", "--inspect-brk", "-A", "${file}"],
        "attachSimplePort": 9229
				"env": {
					"${2}": "${3}"
				}
      }
    ]
  }
